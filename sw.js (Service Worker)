// Service Worker Ù„ØªØ­Ø³ÙŠÙ† Ø§Ù„Ø£Ø¯Ø§Ø¡
const CACHE_NAME = 'shahd-senior-v1';
const urlsToCache = [
    '/',
    '/index.html',
    '/fc25.html',
    '/css/style.css',
    '/css/responsive.css',
    '/js/main.js',
    '/js/whatsapp.js',
    '/js/telegram.js',
    '/data/games.json',
    '/images/fc25.jpg'
];

// ØªØ«Ø¨ÙŠØª Service Worker
self.addEventListener('install', (event) => {
    event.waitUntil(
        caches.open(CACHE_NAME)
            .then((cache) => {
                console.log('âœ… ØªÙ… ÙØªØ­ Ø§Ù„ÙƒØ§Ø´');
                return cache.addAll(urlsToCache);
            })
    );
});

// ØªÙØ¹ÙŠÙ„ Service Worker
self.addEventListener('activate', (event) => {
    event.waitUntil(
        caches.keys().then((cacheNames) => {
            return Promise.all(
                cacheNames.map((cacheName) => {
                    if (cacheName !== CACHE_NAME) {
                        console.log('ðŸ—‘ï¸ Ø­Ø°Ù ÙƒØ§Ø´ Ù‚Ø¯ÙŠÙ…:', cacheName);
                        return caches.delete(cacheName);
                    }
                })
            );
        })
    );
});

// Ø§Ø¹ØªØ±Ø§Ø¶ Ø·Ù„Ø¨Ø§Øª Ø§Ù„Ø´Ø¨ÙƒØ©
self.addEventListener('fetch', (event) => {
    event.respondWith(
        caches.match(event.request)
            .then((response) => {
                // Ø¥Ø±Ø¬Ø§Ø¹ Ù…Ù† Ø§Ù„ÙƒØ§Ø´ Ø¥Ø°Ø§ Ù…ÙˆØ¬ÙˆØ¯
                if (response) {
                    return response;
                }
                
                // ØªÙ†ÙÙŠØ° Ø·Ù„Ø¨ Ø§Ù„Ø´Ø¨ÙƒØ©
                return fetch(event.request)
                    .then((response) => {
                        // ØªØ­Ù‚Ù‚ Ù…Ù† ØµØ­Ø© Ø§Ù„Ø§Ø³ØªØ¬Ø§Ø¨Ø©
                        if (!response || response.status !== 200 || response.type !== 'basic') {
                            return response;
                        }
                        
                        // Ù†Ø³Ø® Ø§Ù„Ø§Ø³ØªØ¬Ø§Ø¨Ø© Ù„Ù„ÙƒØ§Ø´
                        const responseToCache = response.clone();
                        
                        caches.open(CACHE_NAME)
                            .then((cache) => {
                                cache.put(event.request, responseToCache);
                            });
                        
                        return response;
                    });
            })
            .catch(() => {
                // Ø¥Ø±Ø¬Ø§Ø¹ ØµÙØ­Ø© Ø£ÙˆÙÙ„Ø§ÙŠÙ†
                return caches.match('/offline.html');
            })
    );
});

// ØªØ­Ø¯ÙŠØ« Ø§Ù„ÙƒØ§Ø´
self.addEventListener('message', (event) => {
    if (event.data.action === 'UPDATE_CACHE') {
        caches.open(CACHE_NAME)
            .then((cache) => {
                cache.addAll(event.data.urls);
            });
    }
});
    
