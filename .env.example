# Flask Configuration
SECRET_KEY=your-secret-key-here
CAPTCHA_SECRET=your-captcha-secret-key-here

# ملف: .env.example
# مثال على متغيرات البيئة المطلوبة لمشروع شهد السنيورة
# انسخ هذا الملف إلى .env وقم بتعديل القيم حسب بيئتك

# ===== إعدادات التطبيق الأساسية =====

# بيئة التشغيل (development, testing, production, staging)
FLASK_ENV=development

# تفعيل وضع التطوير (True/False)
FLASK_DEBUG=True

# مفتاح التشفير السري - يجب تغييره في الإنتاج
# يمكن توليد مفتاح جديد باستخدام: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# اسم التطبيق
APP_NAME=شهد السنيورة

# إصدار التطبيق
APP_VERSION=1.0.0

# وصف التطبيق
APP_DESCRIPTION=تطبيق شهد السنيورة للمراسلة

# المنفذ الذي سيعمل عليه التطبيق
PORT=5000

# ===== إعدادات قاعدة البيانات =====

# رابط قاعدة البيانات
# للتطوير (SQLite):
DATABASE_URL=sqlite:///shahd_senior.db

# للإنتاج (PostgreSQL):
# DATABASE_URL=postgresql://username:password@localhost:5432/shahd_senior

# للإنتاج (MySQL):
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/shahd_senior

# تفعيل عرض استعلامات قاعدة البيانات (True/False)
SQLALCHEMY_ECHO=False

# ===== إعدادات الأمان =====

# مدة انتهاء الجلسة بالأيام
SESSION_LIFETIME_DAYS=30

# تفعيل HTTPS الإجباري (True/False)
SESSION_COOKIE_SECURE=False

# الحد الأدنى لطول كلمة المرور
PASSWORD_MIN_LENGTH=8

# متطلبات كلمة المرور
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_LOWERCASE=True
PASSWORD_REQUIRE_NUMBERS=True
PASSWORD_REQUIRE_SYMBOLS=False

# إعدادات Rate Limiting الافتراضية
RATELIMIT_DEFAULT=1000 per hour

# ===== إعدادات البريد الإلكتروني =====

# خادم SMTP
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False

# بيانات اعتماد البريد الإلكتروني
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# البريد الافتراضي للمرسل
MAIL_DEFAULT_SENDER=noreply@shahd-senior.com

# قائمة المديرين (مفصولة بفواصل)
ADMINS=admin@shahd-senior.com,support@shahd-senior.com

# ===== إعدادات رفع الملفات =====

# مجلد رفع الملفات
UPLOAD_FOLDER=uploads

# الحد الأقصى لحجم الملف بالبايت (16 ميجابايت)
MAX_CONTENT_LENGTH=16777216

# الحد الأقصى لحجم الصور بالبايت (5 ميجابايت)
MAX_IMAGE_SIZE=5242880

# جودة ضغط الصور (1-100)
IMAGE_QUALITY=85

# ===== إعدادات التخزين المؤقت =====

# نوع التخزين المؤقت (simple, redis, memcached)
CACHE_TYPE=simple

# مدة التخزين المؤقت الافتراضية بالثواني
CACHE_DEFAULT_TIMEOUT=300

# رابط Redis للتخزين المؤقت (إذا كان متاحاً)
# REDIS_URL=redis://localhost:6379/0

# ===== إعدادات التوطين =====

# اللغة الافتراضية
DEFAULT_LANGUAGE=ar

# المنطقة الزمنية
TIMEZONE=Asia/Riyadh

# ===== إعدادات الرسائل =====

# الحد الأقصى لطول الرسالة
MAX_MESSAGE_LENGTH=1000

# عدد الرسائل في الصفحة الواحدة
MESSAGES_PER_PAGE=50

# مدة الاحتفاظ بالرسائل المحذوفة بالأيام
DELETED_MESSAGES_RETENTION_DAYS=30

# تفعيل إشعارات الرسائل (True/False)
ENABLE_MESSAGE_NOTIFICATIONS=True

# ===== إعدادات المستخدمين =====

# السماح بالتسجيل الجديد (True/False)
REGISTRATION_ENABLED=True

# تفعيل التحقق من البريد الإلكتروني (True/False)
EMAIL_VERIFICATION_REQUIRED=True

# مدة صلاحية رمز التفعيل بالساعات
VERIFICATION_TOKEN_EXPIRY_HOURS=24

# عدد المستخدمين في الصفحة الواحدة
USERS_PER_PAGE=20

# ===== إعدادات السجلات =====

# مستوى السجلات (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# مجلد السجلات
LOG_FOLDER=logs

# الحد الأقصى لحجم ملف السجل بالبايت (10 ميجابايت)
LOG_MAX_SIZE=10485760

# عدد ملفات السجل المحفوظة
LOG_BACKUP_COUNT=5

# ===== إعدادات الأداء =====

# مستوى الضغط (1-9)
COMPRESS_LEVEL=6

# مدة التخزين المؤقت للملفات الثابتة بالثواني (سنة واحدة)
SEND_FILE_MAX_AGE_DEFAULT=31536000

# ===== إعدادات الأمان المتقدمة =====

# تفعيل HTTPS فقط (True/False)
FORCE_HTTPS=False

# تفعيل حماية XSS (True/False)
XSS_PROTECTION=True

# تفعيل حماية Content Type (True/False)
CONTENT_TYPE_NOSNIFF=True

# ===== إعدادات API =====

# إصدار API
API_VERSION=v1

# تفعيل وثائق API (True/False)
API_DOCS_ENABLED=True

# الحد الأقصى لعدد النتائج في API
API_MAX_RESULTS=100

# ===== إعدادات المهام الخلفية =====

# رابط Celery Broker (إذا كان متاحاً)
# CELERY_BROKER_URL=redis://localhost:6379/0

# رابط Celery Result Backend (إذا كان متاحاً)
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===== إعدادات المراقبة =====

# تفعيل مراقبة الأداء (True/False)
MONITORING_ENABLED=False

# مفتاح Sentry للمراقبة (إذا كان متاحاً)
# SENTRY_DSN=https://your-sentry-dsn-here

# ===== إعدادات الخدمات الخارجية =====

# مفاتيح API للخدمات الخارجية (إذا كانت متاحة)

# Google Maps API
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Twilio للرسائل النصية
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=your-twilio-phone-number

# SendGrid للبريد الإلكتروني
# SENDGRID_API_KEY=your-sendgrid-api-key

# AWS S3 للتخزين السحابي
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET_NAME=your-s3-bucket-name
# AWS_S3_REGION=us-east-1

# Google Cloud Storage
# GOOGLE_CLOUD_PROJECT_ID=your-project-id
# GOOGLE_CLOUD_STORAGE_BUCKET=your-bucket-name

# ===== إعدادات الدفع (إذا كانت متاحة) =====

# Stripe
# STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
# STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# PayPal
# PAYPAL_CLIENT_ID=your-paypal-client-id
# PAYPAL_CLIENT_SECRET=your-paypal-client-secret
# PAYPAL_MODE=sandbox

# ===== إعدادات الشبكات الاجتماعية =====

# Facebook
# FACEBOOK_APP_ID=your-facebook-app-id
# FACEBOOK_APP_SECRET=your-facebook-app-secret

# Twitter
# TWITTER_API_KEY=your-twitter-api-key
# TWITTER_API_SECRET=your-twitter-api-secret
# TWITTER_ACCESS_TOKEN=your-twitter-access-token
# TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# Google OAuth
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# ===== إعدادات التحليلات =====

# Google Analytics
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Facebook Pixel
# FACEBOOK_PIXEL_ID=your-facebook-pixel-id

# ===== إعدادات الأمان الإضافية =====

# مفتاح تشفير إضافي للبيانات الحساسة
# ENCRYPTION_KEY=your-encryption-key-here

# مفتاح JWT للمصادقة
# JWT_SECRET_KEY=your-jwt-secret-key

# مدة انتهاء صلاحية JWT بالدقائق
# JWT_EXPIRATION_MINUTES=60

# ===== إعدادات النسخ الاحتياطي =====

# تفعيل النسخ الاحتياطي التلقائي (True/False)
# AUTO_BACKUP_ENABLED=False

# مجلد النسخ الاحتياطي
# BACKUP_FOLDER=backups

# تكرار النسخ الاحتياطي بالساعات
# BACKUP_INTERVAL_HOURS=24

# ===== إعدادات الإشعارات =====

# تفعيل الإشعارات الفورية (True/False)
# PUSH_NOTIFICATIONS_ENABLED=False

# مفتاح Firebase للإشعارات
# FIREBASE_SERVER_KEY=your-firebase-server-key

# ===== إعدادات التطوير =====

# تفعيل شريط أدوات التطوير (True/False)
# FLASK_DEBUG_TOOLBAR=True

# تفعيل إعادة التحميل التلقائي للقوالب (True/False)
# TEMPLATES_AUTO_RELOAD=True

# تفعيل وضع الاختبار (True/False)
# TESTING=False

# ===== إعدادات خاصة بالبيئة =====

# للإنتاج فقط - تفعيل جميع إعدادات الأمان
# PRODUCTION_MODE=True

# للتطوير فقط - تعطيل بعض الفحوصات الأمنية
# DEVELOPMENT_MODE=True

# للاختبار فقط - استخدام قاعدة بيانات في الذاكرة
# TEST_DATABASE_URL=sqlite:///:memory:

# ===== ملاحظات مهمة =====
# 1. لا تشارك ملف .env مع أي شخص
# 2. أضف .env إلى ملف .gitignore
# 3. غير جميع كلمات المرور والمفاتيح السرية
# 4. استخدم كلمات مرور قوية ومعقدة
# 5. فعل HTTPS في الإنتاج
# 6. راجع جميع الإعدادات قبل النشر
# 7. احتفظ بنسخة احتياطية من الإعدادات المهمة
# 8. استخدم خدمات إدارة الأسرار في الإنتاج مثل AWS Secrets Manager

